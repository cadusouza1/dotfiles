Config { font = "xft:Fira Code Nerd Font:weight=regular:pixelsize=16:antialias=true:hinting=true"
        , additionalFonts = ["xft:Fira Code Nerd Font Mono:weight=regular:pixelsize=20:antialias=true:hinting=true", "xft:Fira Code Nerd Font Mono:weight=regular:pixelsize=24:antialias=true:hinting=true"]
       , bgColor = "#161925"
       , fgColor = "#f8f8f2"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Cpu ["-t", "<fn=2>\xf4bc</fn> Cpu: <total>%", "-H","80","--high","red"] 10
                    , Run Memory ["-t","<fn=2>\xf233</fn> Mem: <usedratio>%"] 10
                    , Run Swap [] 10
    		    , Run Date "<fn=2>\xf00ed</fn> %a %b %_d %Y %H:%M" "date" 600
                , Run BatteryP ["BAT0"] ["-t", "<fn=1>\xf12a3</fn> <acstatus><watts> (<left>%)"] 10
                , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=#50fa7b>%cpu%</fc> | <fc=#ff79c6>%memory% * %swap%</fc> | <fc=#ee9a00>%date%</fc>| <fc=#f1fa8c>%battery%</fc>"
       }
